<h1>Dashboard#show</h1>
<p>Find me in app/views/dashboard/show.html.erb</p>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Amount</th>
      <th>Due Date</th>
      <th>Payment Date</th>
      <th>Late Fee</th>
      <th>APR</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.name %></td>
        <td><%= expense.category %></td>
        <td><%= number_to_currency (expense.amount) %></td>
        <td><%= expense.dueDate %></td>
        <td><%= expense.paymentDate %></td>
        <td><%= expense.lateFee %></td>
        <td><%= expense.apr %></td>
        <td><%= expense.paid %></td>
        <td><%= link_to 'View', expense %></td>
      </tr>
    <% end %>
  </tbody>
</table>
