<p id="notice"><%= notice %></p>

<h1>Listing Income Payments</h1>

<table>
  <thead>
    <tr>
      <th>Payment Source</th>
      <th>Category</th>
      <th>Bank Account</th>
      <th>Gross Income</th>
      <th>Net Income</th>
      <th>Payment Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
          <td><%= income.income_source %></td>
          <td><%= income.category %></td>
          <td><%= income.bank_account %></td>
      </tr>
      <% @income_payments.each do |income_payment| %>
        <tr>
          <td><%= income_payment.gross_income %></td>
          <td><%= income_payment.net_income %></td>
          <td><%= income_payment.paymentDate %></td>
          <td><%= link_to 'Show', income_payment %></td>
          <td><%= link_to 'Edit', edit_income_payment_path(income_payment) %></td>
          <td><%= link_to 'Destroy', income_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

