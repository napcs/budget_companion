<p id="notice"><%= notice %></p>

<h1>Listing Data Points</h1>

<table>
  <thead>
    <tr>
      <th>Goal</th>
      <th>Desired amount</th>
      <th>Actual amount</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @data_points.each do |data_point| %>
      <tr>
        <td><%= data_point.goal_id %></td>
        <td><%= data_point.desired_amount %></td>
        <td><%= data_point.actual_amount %></td>
        <td><%= data_point.start_date %></td>
        <td><%= data_point.end_date %></td>
        <td><%= link_to 'Show', data_point %></td>
        <td><%= link_to 'Edit', edit_data_point_path(data_point) %></td>
        <td><%= link_to 'Destroy', data_point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

