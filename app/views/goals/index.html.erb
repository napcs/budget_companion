<p id="notice" class="row"><%= notice %></p>

<h1>Goals</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>Duration</th>
      <th>Frequency</th>
      <th>Desired total</th>
      <th>Actual total</th>
      <th colspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.name %></td>
        <td><%= goal.start_date.strftime("%m/%d/%Y") %></td>
        <td><%= goal.duration %></td>
        <td><%= goal.frequency %></td>
        <td><%= number_to_currency(goal.desired_total) %></td>
        <td><%= number_to_currency(goal.actual_total) %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

